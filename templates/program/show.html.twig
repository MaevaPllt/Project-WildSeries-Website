{% extends "base.html.twig" %}

{% block title %} Série # {{ program.id }}{% endblock %}

{% block body %}

    <div class="media">
        <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.summary }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            {% for season in seasons %}
                <p><a href="{{ path('program_season_show', { program_slug: program.slug, seasonId: season.id }) }}" class="btn btn-success " type="button">
                    Saison {{ season.number }}
                </a></p>
            {% endfor %}
            <p>Acteurs associés :</p>
            {% for actor in actors %}
                <a href="{{ path("actor_show", { id: actor.id }) }}" class="btn btn-success btn-sm" type="button">
                    {{ actor.name }}
                </a>
            {% endfor %}
        </div>
    </div>
    <a href="{{ path('program_index') }}" class="btn btn-success " type="button">
        Retour à la liste  des programmes
    </a>
{% endblock %}