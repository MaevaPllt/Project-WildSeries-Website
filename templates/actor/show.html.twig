{% extends 'base.html.twig' %}
    {% block title %}Acteurs{% endblock %}
{% block body %}
    <h1>Acteur :</h1>
    {% for program in programs %}
        <div>
            <h2>{{ program.title }}</h2>
            <a href="{{ path("program_show", { id: program.id }) }}" class="btn btn-success btn-sm" type="button">
                Voir la fiche de la série
            </a>
        </div>
    {% else %}
        Aucun acteur pour cette série.
    {% endfor %}
    <a class="btn btn-success" href="{{ path('app_index') }}">Retour à l'accueil</a>
{% endblock %}